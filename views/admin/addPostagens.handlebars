{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagem/nova" method="post">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control mt-2" required
                placeholder="Digite aqui" autocomplete="off">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control mt-2" required
                required placeholder="Digite aqui" autocomplete="off">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control mt-2" required 
                placeholder="Digite aqui" autocomplete="off">
            
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control mt-2" required 
                placeholder="Digite aqui" autocomplete="off"></textarea>

            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select mt-2">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nehnuma Categoria Registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4" >Criar Postagem</button>
        </form>
    </div>
</div>