<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagem/add"><button class="btn btn-success " >Nova Postagens</button></a>

{{#each postagem}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>Titutlo: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <p>Conteudo: {{conteudo}}</p>
            <div class="d-flex justify-content-between align-items-center">
                <button class="alert alert-success">Categoria: {{categoria.nome}}</button>
                <small class="text-muted">Data: {{dataFormatada}}</small>
            </div>
            <div class="d-flex" >   
                <a href="/admin/postagem/edit/{{_id}}">
                    <button class="btn btn-success mr-2" >Editar Postagem</button></a>
                <form action="/admin/postagem/deletar" method="post" class="form-inline mx-2">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-9 ml-2 ">Deletar Postagem</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <p>Nehnuma Postagem Registrada !</p>
{{/each}}
